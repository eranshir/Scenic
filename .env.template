# Scenic Environment Variables Template
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ====================
# REQUIRED CONFIGURATION
# ====================

# Supabase (Required)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Cloudinary (Required)
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here

# ====================
# OPTIONAL CONFIGURATION
# ====================

# Supabase (Optional - for server-side operations)
SUPABASE_SERVICE_KEY=your_service_key_here

# Cloudinary (Optional - for signed uploads)
CLOUDINARY_API_SECRET=your_api_secret_here

# Apple Services (Optional)
APPLE_TEAM_ID=your_team_id_here

# ====================
# FEATURE FLAGS
# ====================
ENABLE_OFFLINE_MODE=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_PLANNING_FEATURES=true
ENABLE_PAYMENT_FEATURES=false
ENABLE_AI_FEATURES=false

# ====================
# ENVIRONMENT
# ====================
ENVIRONMENT=development
DEBUG_MODE=true